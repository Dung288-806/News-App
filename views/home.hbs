<div class="container-fluid paddding mb-5">
    <div class="row mx-0">
        <div class="col-md-6 col-12 paddding animate-box card-article"
            onclick="checkPremiumAndUpdateView({{articleMostOutstanding_1.id}}, {{articleMostOutstanding_1.views}}, {{articleMostOutstanding_1.isPremium}}, {{this.isLogin}});"
            data-animate-effect="fadeIn">
            <div class="fh5co_suceefh5co_height img-hover">
                <div class="fh5co_suceefh5co_height_position_absolute img-hover"></div>
                <img src="{{articleMostOutstanding_1.small_avt}}" alt="img" />
                <div class="fh5co_suceefh5co_height_position_absolute_font p-0"
                    style="bottom: 0; top: auto; left: 0; height: auto; padding: 0 4% !important;">
                    <div class="w-100">
                        <a href="javascript:;" class="fh5co_good_font" style="font-size: 16px;"
                            {{#if articleMostOutstanding_1.isPremium}} <i class="fa fa-star" aria-hidden="true"></i>
                            {{/if}}
                            {{articleMostOutstanding_1.title}}
                        </a>
                    </div>
                    <div class="box-author d-flex align-items-center">
                        <div class="box-category" onclick="event.stopPropagation();">
                            <a href="articles/bycate?id={{articleMostOutstanding_1.csId}}" style="font-size: 12px;">
                                {{articleMostOutstanding_1.csName}}
                            </a>
                        </div>
                    </div>
                    <div>
                        <a href="javascript:;" class="color_fff"
                            style="color: rgba(255, 255, 255, 0.7) !important; font-size: 12px;">
                            <i class="fa fa-clock-o"></i>
                            {{articleMostOutstanding_1.datePost}} -
                            <i class="fa fa-comment" aria-hidden="true"></i>
                            {{articleMostOutstanding_1.nCmt}} -
                            <i class="fa fa-eye" aria-hidden="true"></i>
                            {{articleMostOutstanding_1.views}}
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                {{#each this.articleMostOutstanding_4}}
                <div class="col-md-6 col-6 paddding animate-box card-article"
                    onclick="checkPremiumAndUpdateView({{id}}, {{views}}, {{isPremium}}, {{../this.isLogin}});"
                    data-animate-effect="fadeIn">
                    <div class="fh5co_suceefh5co_height_2 img-hover">
                        <div class="fh5co_suceefh5co_height_position_absolute"></div>
                        <img src="{{small_avt}}" alt="img" />
                        <div class="fh5co_suceefh5co_height_position_absolute_font_2 p-0"
                            style="bottom: 0; top: auto; left: 0; height: auto; padding: 0 4% !important">
                            <div class="w-100">
                                <a href="javascript:;" class="fh5co_good_font_2" style="font-size: 16px; ">
                                    {{#if isPremium}}
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    {{/if}}
                                    {{title}}
                                </a>
                            </div>
                            <div class="d-flex align-items-center">
                                <div class="box-category" onclick="event.stopPropagation();">
                                    <a href="articles/bycate?id={{csId}}" style="font-size: 12px;">
                                        {{csName}}
                                    </a>
                                </div>
                            </div>
                            <div>
                                <a href="javascript:;" class="color_fff"
                                    style="color: rgba(255, 255, 255, 0.7) !important; font-size: 12px;">
                                    <i class="fa fa-clock-o"></i>
                                    {{datePost}} -
                                    <i class="fa fa-comment" aria-hidden="true"></i>
                                    {{nCmt}} -
                                    <i class="fa fa-eye" aria-hidden="true"></i>
                                    {{views}}
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

<div class="container-fluid pt-3">
    <div class="container animate-box" data-animate-effect="fadeIn">
        <div>
            <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">Trending</div>
        </div>
        <div class="owl-carousel owl-theme js d-flex" id="slider1">
            {{#each this.articleMostView_10}}
            <div class="item px-2 card-article"
                onclick="checkPremiumAndUpdateView({{id}}, {{views}}, {{isPremium}}, {{../isLogin}});">
                <div class="fh5co_latest_trading_img_position_relative">
                    <div class="fh5co_latest_trading_img"><img src="{{small_avt}}" alt=""
                            class="fh5co_img_special_relative" /></div>
                    <div class="fh5co_latest_trading_img_position_absolute"></div>
                    <div class="fh5co_latest_trading_img_position_absolute_1">
                        <a href="javascript:;" class="text-white" style="font-size: 14px;">
                            {{#if isPremium}}
                            <i class=" fa fa-star" aria-hidden="true"></i>
                            {{/if}}
                            {{title}}
                        </a>
                        <div class="d-flex align-items-center" style="color: #FFF">
                            <div class="box-category" onclick="event.stopPropagation();">
                                <a href="articles/bycate?id={{csId}}" style="font-size: 12px;">
                                    {{csName}}
                                </a>
                            </div>
                        </div>
                        <div class="fh5co_latest_trading_date_and_name_color b-0" style="font-size: 12px;">
                            <i class="fa fa-clock-o"></i>
                            {{datePost}} -
                            <i class="fa fa-comment" aria-hidden="true"></i>
                            {{nCmt}} -
                            <i class="fa fa-eye" aria-hidden="true"></i>
                            {{views}}
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

<div class="container-fluid pb-4 pt-5">
    <div class="container animate-box">
        <div>
            <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">News</div>
        </div>
        <div class="owl-carousel owl-theme card-article" id="slider2">
            {{#each this.articleNew_10}}
            <div class="item px-2 h-100"
                onclick="checkPremiumAndUpdateView({{id}}, {{views}}, {{isPremium}}, {{../isLogin}});">
                <div class="fh5co_hover_news_img">
                    <div class="fh5co_news_img"><img src="{{small_avt}}" alt="" /></div>
                    <div class="d-flex flex-column justify-content-between">
                        <a href="javascript:;" class="d-block fh5co_small_post_heading">
                            <span style="font-size: 14px; font-weight: bold;">
                                {{#if isPremium}}
                                <i class="fa fa-star" aria-hidden="true"></i>
                                {{/if}}
                                {{title}}
                            </span>
                        </a>
                        <div class="d-flex align-items-center">
                            <div class="box-category" onclick="event.stopPropagation();">
                                <a href="articles/bycate?id={{csId}}"
                                    style="color: #424040; border: solid 1px #424040; font-size: 12px;">
                                    {{csName}}
                                </a>
                            </div>
                        </div>
                        <div class="c_g" style="font-size: 12px;">
                            <i class="fa fa-clock-o"></i>
                            {{datePost}} -
                            <i class="fa fa-comment" aria-hidden="true"></i>
                            {{nCmt}} -
                            <i class="fa fa-eye" aria-hidden="true"></i>
                            {{views}}
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

<div class="container-fluid pb-4 pt-4 paddding">
    <div class="container paddding">
        <div class="row mx-0">
            <div class="col-md-8 animate-box" id="articleByCategoryMostView" data-animate-effect="fadeInLeft">
                {{> articleByCategoryMostView}}
            </div>
            <div class="col-md-3 animate-box" data-animate-effect="fadeInRight">
                <div>
                    <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">Tags</div>
                </div>
                <div class="clearfix"></div>
                <div class="fh5co_tags_all">
                    {{#each this.tags_15}}
                    <a href="/articles/bytag?id={{id}}&page=1" class="fh5co_tagg"
                        style="font-size: 14px;">{{tag_name}}</a>
                    {{/each}}
                </div>
            </div>
        </div>

    </div>
</div>

