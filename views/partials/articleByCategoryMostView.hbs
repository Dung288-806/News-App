{{#each this.articleByCategoryMostView_10}}
<div>
    <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">{{csName}}</div>
</div>
<div class="row pb-4 card-article"
    onclick="checkPremiumAndUpdateView({{id}}, {{views}}, {{isPremium}}, {{../isLogin}});">
    <div class="col-md-5">
        <div class="fh5co_hover_news_img">
            <div class="fh5co_news_img"><img src="/public{{small_avt}}" alt="" /></div>
        </div>
    </div>
    <div class="col-md-7 d-flex flex-column">
        <a href="javascript:;" class="fh5co_magna py-2" style="padding: 0 !important;">
            {{#if isPremium}}
            <i class="fa fa-star" aria-hidden="true"></i>
            {{/if}}
            {{title}}
        </a>
        <div class="d-flex align-items-center align-center">
            <a href="javascript:;" class="fh5co_mini_time py-3" style="padding: 8px 0 !important">
                <i class="fa fa-clock-o"></i>
                {{datePost}}
            </a>&nbsp;-&nbsp;
            <a href="javascript:;" class="fh5co_mini_time py-3" style="padding: 8px 0 !important">
                <i class="fa fa-comment" aria-hidden="true"></i>
                {{nCmt}}
            </a>&nbsp;-&nbsp;
            <a href="javascript:;" class="fh5co_mini_time py-3" style="padding: 8px 0 !important">
                <i class="fa fa-eye" aria-hidden="true"></i>
                {{views}}
            </a>
        </div>
        <div class="fh5co_consectetur">
            {{sum_content}}
        </div>
    </div>
</div>
{{/each}}
<div class="row mx-0" data-animate-effect="fadeInUp">
    <div class="col-12 text-center pb-4 pt-4 no-copy">
        <a href="javascript:;" class="btn_mange_pagging {{#if preDisable}}button-disabled{{/if}}"
            onclick="clickPaging({{pagePre}})">
            <i class="fa fa-angle-left" aria-hidden="true"></i>
        </a>
        {{#each this.pageItems}}
        <a href="javascript:;" onclick="clickPaging({{value}});"
            class="btn_pagging {{#if isActive}}paging-active{{/if}}">{{value}}</a>
        {{/each}}
        <a href="javascript:;" class="btn_mange_pagging {{#if nextDisable}}button-disabled{{/if}}"
            onclick="clickPaging({{pageNext}})">
            <i class="fa fa-angle-right" aria-hidden="true"></i>
        </a>
    </div>
</div>
{{#section 'js'}}
<script>
    function clickPaging(page) {
        let articleByCategoryMostView = document.getElementById('articleByCategoryMostView');
        $.getJSON('/articleByCategoryMostView-paging/' + page, function (data) {
            articleByCategoryMostView.innerHTML = data.html;
        })
    }
</script>
{{/section}}