<div class="container-fluid">
    <div class="container">
        <div class="row">
            <a href="/" class="col-12 col-md-3 fh5co_padding_menu">
                <img src="../../public/img/logo.png" alt="img" class="fh5co_logo_width" />
            </a>
            <div class="col-12 col-md-9 align-self-center fh5co_mediya_right d-flex align-items-center justify-content-end flex-wrap"
                style="z-index: 1001;">
                <form id="searchbar" method="GET" action="/search" style="max-width: 100%; !important">
                    <div class="search-container d-flex align-items-center">
                        <input class="input-search" id="search" type="text" name="q" placeholder="Search..">
                        <button type="submit" class="button-search"><i class="fa fa-search fa-lg"></i></button>
                    </div>
                </form>
                <form id="frmLogout" action="/account/logout" method="POST"></form>
                {{#if isLogin}}
                <div class="dropdown user-dropdown" style="">
                    <a class="btn dropdown-toggle cursor-pointer" type="button" id="dropdownMenuButton"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-user fa-lg" aria-hidden="true"></i>
                        {{user.username}}
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="/account/profile">
                            <i class="fa fa-users" aria-hidden="true"></i>
                            Profile
                        </a>
                        <a class="dropdown-item" href="javascript: $('#frmLogout').submit()">
                            <i class="fa fa-sign-out" aria-hidden="true"></i>
                            logout
                        </a>
                    </div>
                </div>
                {{else}}
                <div style="margin-left: 16px;">
                    <a href="/account/login" class="login" style="margin-right: 8px;">
                        <i class="fa fa-user fa-lg" aria-hidden="true"></i>
                        Login
                    </a>
                    <a href="/account/register" class="register">
                        <i class="fa fa-user-plus fa-lg" aria-hidden="true"></i>
                        Register
                    </a>
                </div>
                {{/if}}
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>