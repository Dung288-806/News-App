        </div>
        <div class="row mx-0 no-copy">
            <div class="col-12 text-center pb-4 pt-4">
                <a href="/search?q={{textSearch}}&page={{prePage}}"
                    class="btn_mange_pagging {{#if preDisable}}button-disabled{{/if}}">
                    <i class="fa fa-angle-left" aria-hidden="true"></i>
                </a>
                {{#each pageItems}}
                <a href="/search?q={{textSearch}}&page={{value}}"
                    class="btn_pagging {{#if isActive}}paging-active{{/if}}">{{value}}</a>
                {{/each}}
