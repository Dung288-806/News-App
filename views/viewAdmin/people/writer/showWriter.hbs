{{#if isHas }}
<div class="row mb-3">
    <div class="col col-sm-12">
        <div class="alert alert-danger">Dont have any data</div>
    </div>
</div>

{{else}}
<div class="row mb-3">
    <div class="col col-sm-12">
        <a href="/admin/writer/add" class="btn btn-success mb-3">
            Add <i class="fa fa-plus-circle"></i>
        </a>

    </div>
</div>
<div class="wrap" id="showWrite">
    <div class="row">
        <div class="col col-sm-12">
            <table class="table table-dark text-center">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Pseudonym</th>
                        <th scope="col">Sum Articles</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each listWriter}}
                    <tr>
                        <th scope="row">{{this.id}}</th>
                        <td><a style="width: 150px;" class="btn btn-primary btn-set"
                                href="/admin/writer/view/{{this.id}}">{{this.name}}</a>
                        <td>{{this.pseudonym}}</td>
                        <td>{{this.sum}}</td>
                        <td class="action">
                            <a href="/admin/writer/art/id/{{this.id}}" class="btn btn-warning">
                                <i class="fa fa-eye"></i>
                            </a>
                            <form action="/admin/writer/del" method="POST">
                                <input name="id" type="hidden" value="{{this.id}}">
                                <button class=" action_del {{#if this.isDel}} disabled  {{/if}}" type="submit"> <i
                                        class="fa fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row footer">
        <div class="col col-sm-12">
            <nav aria-label="...">
                <ul class="pagination">
                    <li class="page-item {{#if preDis}} disabled {{/if}}">
                        <a class="page-link" href="/admin/writer?page={{prePage}}"  tabindex="-1">Previous</a>
                    </li>
                    {{#each numPage}}
                    <li  class="page-item {{#if this.isActive}} active {{/if}}"><a
                        href="/admin/writer?page={{this.val}}"     class="page-link">{{this.val}}</a></li>
                    {{/each}}
                    <li class="page-item {{#if nextDis}} disabled {{/if}}">
                        <a href="/admin/writer?page={{nextPage}}" class="page-link ">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

</div>

{{#section 'js'}}
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<!-- Menu Toggle Script -->
<script>
    $("#menu-toggle").click(function (e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
</script>
{{/section}}

{{/if}}