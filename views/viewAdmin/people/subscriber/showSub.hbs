
<div class="wrap" id="showSub">
    <div class="row">
        <div class="col col-sm-12">
            <table class="table table-dark text-center">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Tên</th>
                        <th scope="col">Email</th>
                        <th scope="col">Thời Hạn Còn Lại</th>
                        <th scope="col">Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each listSub}}
                    <tr>
                        <th scope="row">{{this.id}}</th>
                        <th scope="row">{{this.name}}</th>

                        <th scope="row">{{this.email}}</th>
                        <th scope="row">
                            <span class="mr-3" >{{this.duration}} Phút</span>
                            <button type="button" class="btn btn-success" data-toggle="modal"
                                data-target="#exampleModalCenter_{{this.id}}">
                                <i class="fa fa-edit"></i>
                            </button>
                        </th>
                            <div class="modal fade" id="exampleModalCenter_{{this.id}}" tabindex="-1" role="dialog"
                                aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle">CHANGE TIME</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <form action="/admin/changeTimeExpired" method="POST" id="formApproved">
                                            <div class="modal-body">
                                                <input type="hidden" name="id" value="{{this.id}}">
                                                <input type="hidden" name="page" value="{{this.page}}">
                                                <input class="form-control" name="timeChange" type="number" required>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                <button type="summit" class="btn btn-primary">Save changes</button>
                                            </div>
                                        </form>
                            
                                    </div>
                                </div>
                            </div>

                        <td class="action">
                            <a href="/admin/subscriber/view/{{this.id}}" class="btn btn-warning">
                                <i class="fa fa-eye"></i>
                            </a>
                            <form action="/admin/subscriber/del" method="POST">
                                <input name="id" type="hidden" value="{{this.id}}">
                                <button class=" action_del" type="submit"> <i class="fa fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row footer">
        <div class="col col-sm-12">
            <nav aria-label="...">
                <ul class="pagination">
                    <li class="page-item {{#if preDis}} disabled {{/if}}">
                        <a href="/admin/subscriber?page={{prePage}}" class="page-link"  tabindex="-1">Previous</a>
                    </li>
                    {{#each numPage}}
                    <li class="page-item {{#if this.isActive}} active {{/if}}"><a
                         href="/admin/subscriber?page={{this.val}}"   class="page-link">{{this.val}}</a></li>
                    {{/each}}
                    <li class="page-item {{#if nextDis}} disabled {{/if}}">
                        <a href="/admin/subscriber?page={{nextPage}}" class="page-link ">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

</div>

