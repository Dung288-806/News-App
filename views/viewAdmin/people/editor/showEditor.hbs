
<div class="row">
    <div class="col col-sm-12">
        <a href="/admin/editor/register/add" class="btn btn-success mb-3">
            Add Editor <i class="fa fa-plus-circle"></i>
        </a>
    </div>
</div>

<div class="wrap" id="showEditor">
    <div class="row">
        <div class="col col-sm-12">
            <table class="table table-dark text-center">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">FullName</th>
                        <th scope="col">username</th>
                        <th scope="col">DOB</th>
                        <th scope="col">Sum CateControl</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each listEditor}}
                    <tr>
                        <th scope="row">{{this.id}}</th>
                        <td>{{this.name}}</td>
                        <td>{{this.username}}</td>
                        <td>{{formatDate this.dob}}</td>
                        <td>{{this.sum}}</td>
                        <td class="action">
                            <a href="/admin/editor/view/{{this.id}}" class="btn btn-warning">
                                <i class="fa fa-eye"></i>
                            </a>
                            <form action="/admin/editor/del" method="POST">
                                <input name="id" type="hidden" value="{{this.id}}">
                                <button class=" action_del {{#if this.isDel}} disabled  {{/if}}" type="submit"> <i
                                        class="fa fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row footer">
        <div class="col col-sm-12">
            <nav aria-label="...">
                <ul class="pagination">
                    <li class="page-item {{#if preDis}} disabled {{/if}}">
                        <a href="/admin/editor?page={{prePage}}" class="page-link" tabindex="-1">Previous</a>
                    </li>
                    {{#each numPage}}
                    <li  class="page-item {{#if this.isActive}} active {{/if}}"><a
                         href="/admin/editor?page={{this.val}}"   class="page-link">{{this.val}}</a></li>
                    {{/each}}
                    <li class="page-item {{#if nextDis}} disabled {{/if}}">
                        <a href="/admin/editor?page={{nextPage}}" class="page-link ">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

</div>

{{#section 'js'}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

<script>
    $("#menu-toggle").click(function (e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });

</script>
{{/section}}