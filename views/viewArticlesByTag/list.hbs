<div class="container-fluid pb-4 pt-4 paddding">
    <div class="container paddding">
        <div class="row mx-0">
            <div class="col-md-8 animate-box" data-animate-effect="fadeInLeft">
                <div>
                    <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">
                        {{allTagsByArticle.tag_name}}
                    </div>
                </div>
                {{#if isEmpty}}
                <h3>Không có dữ liệu</h3>
                {{else}}
                {{#each allTagsByArticle}}
                <div class="row pb-4 card-article" onclick="window.location='/articles/detail/{{id}}'">
                    <div class="col-md-5">
                        <div class="fh5co_hover_news_img">
                            <div class="fh5co_news_img"><img src="/public{{small_avt}}" alt="" /></div>
                        </div>
                    </div>
                    <div class="col-md-7 d-flex flex-column">
                        <a href="/articles/detail/{{id}}" class="fh5co_magna py-2">
                            {{title}}
                        </a>
                        <a href="#" class="fh5co_mini_time py-3">
                            Thomson Smith - April 18,2016
                        </a>
                        <div class="fh5co_consectetur">
                            {{sum_content}}
                        </div>
                    </div>
                </div>
                {{/each}}

                {{/if}}
            </div>
            <div class="col-md-3 animate-box" data-animate-effect="fadeInRight">
                <div>
                    <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">Tags</div>
                </div>
                <div class="clearfix"></div>
                <div class="fh5co_tags_all">
                    {{#each this.allArticleByTag}}
                        <a href="/articles/bytag?id={{id}}&page=1" class="fh5co_tagg">{{tag_name}}</a>
                    {{/each}}
                </div>
                <div>
                    <div class="fh5co_heading fh5co_heading_border_bottom pt-3 py-2 mb-4">Most Popular</div>
                </div>
                <div class="row pb-3">
                    <div class="col-5 align-self-center">
                        <img src="../../public/img/download (1).jpg" alt="img" class="fh5co_most_trading" />
                    </div>
                    <div class="col-7 paddding">
                        <div class="most_fh5co_treding_font"> Magna aliqua ut enim ad minim veniam quis nostrud.</div>
                        <div class="most_fh5co_treding_font_123"> April 18, 2016</div>
                    </div>
                </div>
                <div class="row pb-3">
                    <div class="col-5 align-self-center">
                        <img src="../../public/img/allef-vinicius-108153.jpg" alt="img" class="fh5co_most_trading" />
                    </div>
                    <div class="col-7 paddding">
                        <div class="most_fh5co_treding_font"> Enim ad minim veniam nostrud xercitation ullamco.</div>
                        <div class="most_fh5co_treding_font_123"> April 18, 2016</div>
                    </div>
                </div>
                <div class="row pb-3">
                    <div class="col-5 align-self-center">
                        <img src="../../public/img/download (2).jpg" alt="img" class="fh5co_most_trading" />
                    </div>
                    <div class="col-7 paddding">
                        <div class="most_fh5co_treding_font"> Magna aliqua ut enim ad minim veniam quis nostrud.</div>
                        <div class="most_fh5co_treding_font_123"> April 18, 2016</div>
                    </div>
                </div>
                <div class="row pb-3">
                    <div class="col-5 align-self-center"><img src="../../public/img/seth-doyle-133175.jpg" alt="img"
                            class="fh5co_most_trading" /></div>
                    <div class="col-7 paddding">
                        <div class="most_fh5co_treding_font"> Magna aliqua ut enim ad minim veniam quis nostrud.</div>
                        <div class="most_fh5co_treding_font_123"> April 18, 2016</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mx-0">
            <div class="col-12 text-center pb-4 pt-4">
                <a href="/articles/bytag?id={{tags_id}}&page={{prePage}}"
                    class="btn_mange_pagging {{#if preDisable}}button-disabled{{/if}}">
                    <i class="fa fa-angle-left" aria-hidden="true"></i>
                </a>
                {{#each pageItems}}
                <a href="/articles/bytag?id={{tags_id}}&page={{this.value}}"
                    class="btn_pagging">{{this.value}}</a>
                {{/each}}
                <a href="/articles/bytag?id={{tags_id}}&page={{nextPage}}"
                    class="btn_mange_pagging {{#if preDisable}}button-disabled{{/if}}">
                    <i class="fa fa-angle-right" aria-hidden="true"></i>
                </a>
            </div>
        </div>
    </div>
</div>
